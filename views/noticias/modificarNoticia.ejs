<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container mt-5">
    <form action="/editarNoticia" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Editar Noticia</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%=noticia.id %>">
                <input class="form-control mb-3" type="text" name="titulo" id="titulo" value="<%=noticia.titulo %>" placeholder="Titulo" autofocus>
                <input class="form-control mb-3" type="text" name="historia" id="historia" value="<%=noticia.historia %>" placeholder="Descripcion" >
                <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Selecciona tu foto">
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar Noticiaa</button>
                <button class="btn btn-secondary mb-3" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form> 
</div>
