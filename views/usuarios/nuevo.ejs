<%- include("../templates/encabezado") %>
<%- include("../templates/menuNolog") %>
<div class="container mt-5">
    <form action="/nuevousuario" method="post" enctype="multipart/form-data" >
        <div class="card">
            <div class="card-header" >
                <h1>Nuevo usuario</h1>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus required>
                <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario" required>
                <input class="form-control mb-3" type="text" name="password" id="password" placeholder="Password" required>
                <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Selecciona tu foto" required>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Guardar usuario</button>
                <button class="btn btn-secondary mb-3" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form> 
</div>
